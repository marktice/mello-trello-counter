{
  "manifest_version": 2,
  "name": "Mello Trello Counter",
  "description": "It's Trello but Mello. Shows card counter in lists and updates when searching.",
  "version": "0.1.0",
  "icons": {
    "64": "mello-trello64.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["https://trello.com/*"]
  }],
  "permissions": [
    "tabs"
  ]
}
